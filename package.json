{
  "name": "transaction-search-tool",
  "version": "1.0.0",
  "description": "Administration tool for Front End Scanned (FES) documents to enable users to monitor, audit and investigate the routing, status and journey of Front End Scanned document submissions",
  "main": "dist/app.js",
  "scripts": {
    "start": "NODE_ENV=development ./dist/app.js",
    "start:watch": "NODE_ENV=development nodemon",
    "build": "tsc && cp -r src/views dist/app/ && cp -r src/static dist/app/",
    "lint": "tslint -p .",
    "test": "nyc mocha -r ts-mocha src/test/**/*.test.ts && nyc report --reporter=lcov",
    "dependency-check": "owasp-dependency-check --project transaction-search-tool -f HTML",
    "sonarqube-base-branch": "sonar-scanner -Dsonar.dependencyCheck.htmlReportPath=./dependency-check-reports/dependency-check-report.html",
    "sonarqube-pull-request": "sonar-scanner -Dsonar.pullrequest.base=main -Dsonar.dependencyCheck.htmlReportPath=./dependency-check-reports/dependency-check-report.html",
    "analyse-code": "branch=$(git rev-parse --symbolic-full-name --abbrev-ref HEAD); if [[ $branch == \"HEAD\" ]]; then echo $branch && npm run sonarqube-base-branch; else echo $branch && npm run sonarqube-pull-request; fi;"
  },
  "author": "companieshouse",
  "license": "MIT",
  "dependencies": {
    "@companieshouse/node-session-handler": "^5.0.1",
    "@companieshouse/structured-logging-node": "^2.0.1",
    "@companieshouse/web-security-node": "^4.4.1",
    "@types/express": "~4.17.6",
    "@types/node": "^14.14.6",
    "body-parser": "^1.20.3",
    "cookie-parser": "~1.4.4",
    "dotenv": "^8.2.0",
    "express": "^4.21.0",
    "express-session": "^1.17.1",
    "govuk-frontend": "^3.9.1",
    "helmet": "^4.4.1",
    "lint": "^1.1.2",
    "mongodb": "^3.6.5",
    "nodemon": "^3.0.1",
    "nunjucks": "^3.2.2",
    "nyc": "^15.1.0",
    "oracledb": "^6.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "winston": "~3.3.3"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts",
    "exec": "ts-node ./src/app.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@types/sinon": "^9.0.8",
    "chai": "^4.2.0",
    "mocha": "^10.2.0",
    "owasp-dependency-check": "^0.0.24",
    "proxyquire": "^2.1.3",
    "sinon": "^9.2.1",
    "sinon-chai": "^3.5.0",
    "sonarqube-scanner": "^3.5.0",
    "ts-mocha": "^10.0.0"
  }
}
